@model Work
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1>Edit work</h1>
    <div class="img-detail">
        <img class="img-fluid" src="~/assets/img/@Model.Image" />
    </div>
    <form class="forms-sample">
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Choose a new image</label>
            <input class="form-control" type="file" id="formFile">
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Title</label>
            <input type="text" class="form-control" id="exampleInputUsername1" placeholder="@Model.Title">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <textarea type="email" class="form-control" id="exampleInputEmail1">@Model.Description </textarea>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-dark">Cancel</button>
    </form>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-fw my-5" asp-action="Index">
            <i class="mdi mdi-arrow-left-bold"></i>
            Back to main page
        </a>
    </div>
</div>



