@model Work
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <h1>Work Detail</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th> Image </th>
                <th> Title </th>
                <th> Description </th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    <div class="img-detail">
                        <img src="~/assets/img/@Model.Image" />
                    </div>
                </td>
                <td>
                    @Model.Title
                </td>
                <td style="white-space:normal">
                    @Model.Description
                </td>
            </tr>

        </tbody>
    </table>
    
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-fw my-5" asp-action="Index">
            <i class="mdi mdi-arrow-left-bold"></i>
            Back to main page
        </a>
    </div>
</div>

